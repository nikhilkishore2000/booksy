<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter&display=swap"
      rel="stylesheet"
    />
    <link href="/css/app.css" rel="stylesheet" type="text/css" />
    <!-- Toastify CSS -->
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />

    <script type="module">
      import { signup } from "/js/main/auth.js";
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("signupForm");
        if (form) form.addEventListener("submit", signup);
      });
    </script>
  </head>
  <body>
    <!-- Toastify JS -->
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>

    <!-- Promo Bar -->
    <div class="promo-bar">
      Special Sale on World Book Day - Upto 70% on Selected Products
      <a href="#" class="text-warning ms-2">ShopNow</a>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-light bg-white shadow-sm px-4 py-2">
      <div
        class="container-fluid d-flex justify-content-between align-items-center"
      >
        <!-- Logo -->
        <a class="navbar-brand" href="#">
          <img src="/client/images/LOGO.png" alt="Logo" height="70" />
        </a>
        <!-- Language Dropdown -->
        <select class="form-select form-select-sm w-auto">
          <option selected>English</option>
        </select>
      </div>
    </nav>

    <!-- Sign up Section -->
    <div class="container signup-container">
      <div class="mb-3 row">
        <div class="col-md-6 d-flex justify-content-center align-items-center">
          <img
            src="/client/images/login.jpg"
            class="signup-image"
            alt="Signup"
          />
        </div>

        <!-- Form section -->
        <div class="col-md-6">
          <div class="form-wrapper">
            <h3>Create an account</h3>
            <p class="mb-4">Enter your details below</p>
            <form id="signupForm">
              <input
                type="text"
                class="form-control mb-3"
                placeholder="Username"
                name="username"
                required
              />
              <input
                type="text"
                class="form-control mb-3"
                placeholder="Phone"
                name="phone"
                required
              />
              <input
                type="email"
                class="form-control mb-3"
                placeholder="Email"
                name="email"
                required
              />
              <input
                type="password"
                class="form-control mb-3"
                placeholder="Password"
                name="password"
                required
              />
              <input
                type="password"
                class="form-control mb-3"
                placeholder="Confirm Password"
                name="confirmPassword"
                required
              />
              <button type="submit" class="btn btn-primary w-100 mb-3">
                Create Account
              </button>
              <button type="button" class="btn google-btn w-100 mb-3">
                <img
                  src="https://img.icons8.com/color/48/000000/google-logo.png"
                />
                Sign up with Google
              </button>
              <p class="text-center">
                Already have an account? <a href="#">Log in</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row text-md-start text-center">
          <div class="col-md-3 mb-4">
            <h6>Exclusive</h6>
            <p>Subscribe<br />Get 10% off your first order</p>
            <form class="d-flex">
              <input
                type="email"
                class="form-control me-2"
                placeholder="Enter your email"
              />
              <button class="btn btn-primary">→</button>
            </form>
          </div>

          <div class="col-md-3 mb-4">
            <h6>Support</h6>
            <p>Thrissur<br />Kerala<br />India</p>
            <p>booksy@gmail.com</p>
            <p>+91-9048923453</p>
          </div>

          <% if (session.user.username !== '') { %>
          <div class="col-md-2 mb-4">
            <h6>Account</h6>
            <a href="#">My Account</a><br />
            <a href="#">Cart</a><br />
            <a href="#">Wishlist</a><br />
            <a href="#">Shop</a>
          </div>
          <% } %>

          <div class="col-md-2 mb-4">
            <h6>Quick Link</h6>
            <a href="#">Privacy Policy</a><br />
            <a href="#">Terms of Use</a><br />
            <a href="#">FAQ</a><br />
            <a href="#">Contact</a>
          </div>

          <div class="col-md-2 mb-4">
            <h6>Download App</h6>
            <img
              src="/client/images/qrcode.png"
              class="img-fluid mb-2"
              style="width: 40px; height: 40px"
              alt="QR Code"
            />
            <div class="mt-2">
              <img
                src="/client/images/playstore.jpeg"
                class="img-fluid mb-2"
                style="width: 40px; height: 40px"
                alt="Play Store"
              /><br />
              <img
                src="/client/images/appstore.png"
                class="img-fluid"
                style="width: 40px; height: 40px"
                alt="App Store"
              />
            </div>
          </div>
        </div>
        <div class="text-center mt-4">
          <p class="mb-0">© Copyright Booksy. All rights reserved</p>
        </div>
      </div>
    </footer>
  </body>
</html>
